<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.ListaProduto"
             Title="Minhas Compras"> <!-- Título exibido na barra superior da página -->

    <!-- Define os itens da barra de ferramentas (Toolbar) -->
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Somar" Clicked="ToolbarItem_Clicked_1"/>  <!-- Botão "Somar" (sem evento associado ainda) -->

        <!-- Botão "Adicionar" que chama o método ToolbarItem_Clicked no code-behind -->
        <ToolbarItem Text="Adicionar" Clicked="ToolbarItem_Clicked"/>

    </ContentPage.ToolbarItems>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="VerticalTextAlignment" Value="Center" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <!-- Barra de busca que permite filtrar produtos dinamicamente -->
    <StackLayout>
        <SearchBar x:Name="txt_search"
                   Margin="-15, 0, 0, 0" 
                   Placeholder="Busca de Produtos"
                   TextChanged="txt_search_TextChanged"/>

        <Frame Padding="0" Margin="10" VerticalOptions="FillAndExpand">
        <!-- Lista que exibe os produtos cadastrados -->
        <ListView x:Name="lst_produtos" 
                  IsPullToRefreshEnabled="True"
                  Refreshing="lst_produtos_Refreshing"
                  ItemSelected="lst_produtos_ItemSelected">
            <ListView.Header>
                <Grid ColumnDefinitions="30, 100, 80, 50, 90"
                      BackgroundColor="{StaticResource Gray100}">
                        <Label Grid.Column="0" Text="ID" Padding="5" FontAttributes="Bold" />
                        <Label Grid.Column="1" Text="Descrição" FontAttributes="Bold"/>
                        <Label Grid.Column="2" Text="Preço" FontAttributes="Bold"/>
                        <Label Grid.Column="3" Text="Qnt" FontAttributes="Bold"/>
                    <Label Grid.Column="4" Text="Total" FontAttributes="Bold"/>                    
                </Grid>
            </ListView.Header>

            <!-- Template que define como cada item da lista será exibido -->
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <!-- Menu de contexto que aparece ao deslizar o item (ex: para excluir) -->
                        <ViewCell.ContextActions>
                            <MenuItem Text="Remover" Clicked="MenuItem_Clicked" />
                        </ViewCell.ContextActions>

                        <!-- Grid que organiza os dados do produto em colunas -->
                            <Grid ColumnDefinitions="30, 100, 80, 50, 90">
                                <Label Grid.Column="0" Text="{Binding Id}" Padding="5"/>
                            <Label Grid.Column="1" Text="{Binding Descricao}" />
                            <Label Grid.Column="2" Text="{Binding Preco, StringFormat='{}{0:c}'}" />
                            <Label Grid.Column="3" Text="{Binding Quantidade}" />
                            <Label Grid.Column="4" Text="{Binding Total, StringFormat='{}{0:c}'}" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        </Frame>    
    </StackLayout>
</ContentPage>