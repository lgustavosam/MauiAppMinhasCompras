<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.ListaProduto"
             Title="Minhas Compras"> <!-- Título exibido na barra superior da página -->

    <!-- Define os itens da barra de ferramentas (Toolbar) -->
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Somar" />  <!-- Botão "Somar" (sem evento associado ainda) -->

        <!-- Botão "Adicionar" que chama o método ToolbarItem_Clicked no code-behind -->
        <ToolbarItem Text="Adicionar" Clicked="ToolbarItem_Clicked"/>

    </ContentPage.ToolbarItems>



    
    <VerticalStackLayout>
           <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>