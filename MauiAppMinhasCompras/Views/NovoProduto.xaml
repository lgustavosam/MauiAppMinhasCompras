<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.NovoProduto"
             Title="Novo Produto"> <!-- Título exibido na barra superior da página -->

    <!-- Define os itens da barra de ferramentas (Toolbar) -->
    <ContentPage.ToolbarItems>
        <!-- Botão "Salvar" que chama o método ToolbarItem_Clicked no code-behind -->
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>

    <!-- Layout vertical com espaçamento entre os elementos e margem interna -->
    <VerticalStackLayout Spacing="10" Padding="10">

        <!-- Rótulo para o campo de descrição -->
        <Label Text="Descrição do Produto:" />
        <Entry  x:Name="txt_descricao" />

        <!-- Rótulo para o campo de quantidade -->
        <Label Text="Quantidade:" />
        <Entry x:Name="txt_quantidade" Keyboard="Numeric" />

        <!-- Rótulo para o campo de preço unitário -->
        <Label Text="Preço Unitário:" />
        <Entry x:Name="txt_preco" Keyboard="Numeric" />

        <!-- Rótulo para o campo de categoria -->
        <Label Text="Categoria:" />
        <Picker x:Name="pickerCategoria"
                Title="Selecione a Categoria"
                Margin="10" />

    </VerticalStackLayout>
</ContentPage>